<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieApp.MovieDetailsPage"
             Title="MovieDetailsPage"
             xmlns:converter="clr-namespace:MovieApp">
    <VerticalStackLayout>
        <Label  
            Text="Welcome!!!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <StackLayout Padding="20">
                <Image 
                    Source="{Binding Image}" 
                    HeightRequest="100" 
                    Aspect="AspectFill" 
                    WidthRequest="100"
                    HorizontalOptions="Center"
                    Margin="20"
                    />
                <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="24"/>
                <Label Text="{Binding Rating}" FontSize="18"/>
                <Label Text="{Binding Genre}" FontSize="18"/>
                <Label Text="{Binding UserText}" FontSize="18"/>
                <Label Text="{Binding Notes}" FontSize="18"/>
                <Label Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}" FontSize="18"/>
                <Label Text="{Binding Tags, Converter={converter:TagConverter}}" FontSize="18"/>
                <Label Text="{Binding UserText}" FontSize="18"/>
    
            </StackLayout>

            <Button Text="Edit Movie" Clicked="OnEditClicked"/>
            <Button Text="Delete Movie" Clicked="OnDeleteClicked" BackgroundColor="Red"/>
    </VerticalStackLayout>
</ContentPage>