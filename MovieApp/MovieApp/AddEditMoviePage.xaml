<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MovieApp"
             x:Class="MovieApp.AddEditMoviePage"
             Title="AddEditMoviePage">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Movie Title:" />
        <Entry Text="{Binding Title}" Placeholder="Enter title..." />

        <Label Text="Genre:" />
        <Entry Text="{Binding Genre}" Placeholder="Enter.." />

        <Label Text="Year:" />
        <Entry Text="{Binding Year}" Keyboard="Numeric" />

        <Label Text="Watched Status (true OR false):" />
        <HorizontalStackLayout>
            <Entry Text="{Binding IsWatched, Converter={local:MovieStatusConverter}}" />
        </HorizontalStackLayout>

        <Label Text="Review:" />
        <Entry Text="{Binding UserText}" HeightRequest="50" />

        <Label Text="Movie Poster:" />
        <Image Source="{Binding Image}" />

        <!-- <Button Text="Take Photo"
                Clicked="OnTakePhotoClicked" /> -->

        <Button Text="Save Movie"
                Clicked="SaveMovie"
                BackgroundColor="Green"
                TextColor="White"
                Margin="0,20" />

    </VerticalStackLayout>
</ContentPage>